{
  "title": "Airport",
  "description": "Airport schema",
  "id": "http://airschema.org/schema/airport#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "definitions": {
    "surface": {
      "title": "Type of surface.",
      "type": "string",
      "enum": [
        "concrete",
        "asphaltic-concrete",
        "asphalt"
      ]
    }
  },
  "allOf": [
    {
      "$ref": "http://tripschema.org/schema/place#"
    },
    {
      "$ref": "http://tripschema.org/schema/gateway#"
    },
    {
      "properties": {
        "ident": {
          "title": "Airport ID",
          "type": "object",
          "description": "Airport identificators",
          "properties": {
            "iata": {
              "title": "IATA code",
              "description": "3-letter IATA code of airport.",
              "type": "string"
            },
            "icao": {
              "title": "ICAO code",
              "description": "3-letter ICAO code of airport.",
              "type": "string"
            },
            "geonames": {
              "title": "GeoNames ID",
              "type": "number"
            }
          }
        },
        "runways": {
          "title": "Runways",
          "description": "Info about airport runways.",
          "type": "array",
          "items": {
            "title": "Runway",
            "type": "object",
            "properties": {
              "direction": {
                "title": "Direction",
                "description": "Runway direction.",
                "type": "string",
                "pattern": "^\\d{2}\\/\\d{2}$"
              },
              "length": {
                "title": "Length",
                "description": "Runway length in feets.",
                "type": "number"
              },
              "size": {
                "title": "Size",
                "description": "Runway dimensions in feets (length x width).",
                "type": "string",
                "pattern": "^\\d+x\\d+$"
              },
              "surface": {
                "title": "Surface",
                "description": "Type of surface.",
                "$ref": "#/definitions/surface"
              },
              "features": {
                "type": "string",
                "enum": [
                  "ils1",
                  "ils2",
                  "ils3"
                ]
              },
              "active": {
                "title": "Active?",
                "type": "boolean"
              }
            }
          }
        },
        "helipads": {
          "title": "Helipads",
          "description": "Info about airport helipads.",
          "type": "array",
          "items": {
            "title": "Helipad",
            "type": "object",
            "properties": {
              "number": {
                "title": "Number",
                "type": "string"
              },
              "length": {
                "title": "Length",
                "description": "ft",
                "type": "number"
              },
              "surface": {
                "title": "Surface",
                "description": "Type of surface.",
                "$ref": "#/definitions/surface"
              }
            }
          }
        },
        "terminals": {
          "title": "Terminals",
          "description": "Airport terminals.",
          "type": "array",
          "items": {
            "title": "Terminal",
            "type": "object",
            "properties": {
              "name": {
                "title": "Name",
                "description": "Terminal name.",
                "type": "string"
              },
              "alias": {
                "title": "Alias",
                "description": "Terminal alias or shortname.",
                "type": "string"
              },
              "public": {
                "title": "Public",
                "description": "Its public terminal?",
                "type": "boolean"
              },
              "coords": {
                "title": "Coordinates",
                "description": "Location coordinates of terminal.",
                "$ref": "http://tripschema.org/schema/place#/definitions/coords"
              },
              "features": {
                "title": "Features",
                "description": "Terminal features.",
                "$ref": "http://tripschema.org/schema/gateway#/definitions/features"
              }
            }
          }
        },
        "security": {
          "title": "Security",
          "properties": {
            "rffs_cat": {
              "type": "number",
              "max": 10,
              "min": 1
            }
          }
        }
      }
    }
  ]
}